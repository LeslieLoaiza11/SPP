        xmlns:local="clr-namespace:SPP"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow" Height="487" Width="800">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="440" Margin="0,10,0,0" VerticalAlignment="Top" Width="800">
            <Grid Height="100">
                <Label Content="Inicio de Sesión" HorizontalAlignment="Left" Margin="330,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.921,0.385" FontSize="18" FontWeight="Bold" Foreground="#FF707070"/>
