                <TextBox HorizontalAlignment="Left" Height="23" Margin="269,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="264" Foreground="#FF707070"/>
                <Label Content="Contraseña" HorizontalAlignment="Left" Margin="269,111,0,0" VerticalAlignment="Top" Foreground="#FF707070"/>
                <Button Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="352,262,0,45" VerticalAlignment="Center" Width="110" Height="32" Background="#FF1BC623" Foreground="White"/>
                <Button Content="¿Eres nuevo?, registrate" HorizontalAlignment="Left" Margin="269,184,0,0" VerticalAlignment="Top" Width="264" BorderBrush="{x:Null}" Foreground="Red" Background="{x:Null}" Click="Button_Click"/>
                <Button Content="Test" HorizontalAlignment="Left" Margin="685,262,0,0" VerticalAlignment="Top" Width="75"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
