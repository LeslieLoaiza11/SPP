        <Button Name="btnCrearProyecto" Content="Crear proyecto" HorizontalAlignment="Left" Margin="219,28,0,0" VerticalAlignment="Top" Width="534" Height="54" FontSize="20" FontWeight="Bold" BorderBrush="White" Foreground="White" Background="#FF1B2C63"/>
